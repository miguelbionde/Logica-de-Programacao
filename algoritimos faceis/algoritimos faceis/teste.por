programa
{
	
	funcao inicio()
	{
		//PROGRAMA QUE LÊ UM NOME E ESCREVE-O NA TELA
		cadeia nome
		escreva("Digite seu nome: ")
		//Grava na memória o nome que o usuário vai digitar
		leia(nome)
		//Escreva o nome que foi digitado na tela
		escreva("\n\n O nome digitado é: ", nome)
	}
}
