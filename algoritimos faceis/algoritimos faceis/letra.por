programa
{
	inclua biblioteca Texto
	
	funcao inicio()
	{
		caracter letra
		escreva("Informe a letra: \n")
		leia(letra)
		escolha(letra)
		{
			caso 'a':
			escreva("\nÉ vogal.")
			pare
			caso 'e':
			escreva("\nÉ vogal.")
			pare
			caso 'i':
			escreva("\nÉ vogal.")
			pare
			caso 'o':
			escreva("\nÉ vogal.")
			pare
			caso 'u':
			escreva("\nÉ vogal.")
			pare
			caso contrario:
			escreva("\nÉ uma consoante")
		}
	}
}
